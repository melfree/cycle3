<hr/>
<div class="ratings_div">
    <h6>History</h6>
    <% if user.has_completed_deal %>

      <% for code, value in user.ratings %>
        <p>
          <i>"<%= Deal.reason_string(code.to_i) %>":</i>
          <strong><%= value %></strong>
        </p>
      <% end %>
      
      <p>Overall: <span id="<%= user.id %>_star"></span></p>
      
    <% else %>
      <i>None yet.</i>
    <% end %>
</div>

<script>
  $('#<%= user.id %>_star').raty({
    readOnly: true,
    half: true,
    score: <%= user.rating_number %>,
    path: '/assets'
  });
</script>