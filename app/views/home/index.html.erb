<h1>Dashboard</h1>

<div class="panel panel-info">
  <div class="panel-heading">My Status</div>
  <div class="panel-body">
    <%= render 'status_form' %>
  </div>
</div>

<div class="panel panel-info">
  <div class="panel-heading">My Offers</div>
  <div class="panel-body">
    <%= render 'deals_form'%>
  </div>
</div>

<h1>Current Buyers and Sellers Feed</h1>
<div class="row">
  <% for sym in [:sellers,:buyers] %>
    <div class="col-xs-6">
      <h3>Current <%= sym.to_s.humanize %></h3>
      <section>
        <%= render 'users/users', users: @users.public_send(sym), data_channel: sym.to_s %>
      </section>
    </div>
  <% end %>
</div>

<h2>Active Deals Feed</h2 %>
<div class="row">
  <% for sym in [:sales,:purchases] %>
    <div class="col-xs-6">
      <h3><%= sym.to_s.humanize %></h3>
      <section>
        <%= render 'deals/deals', deals: @deals.public_send(sym), data_channel: sym.to_s %>
      </section>
    </div>
  <% end %>
</div>

