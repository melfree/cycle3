<div class="row">
  <div class="col-xs-12 col-sm-5">
    
    <%= render 'deals/match_user', user: user %> 

  </div>
      
  <div class="col-xs-12 col-sm-offset-1 col-sm-6">
    <%#= render 'deals/match_user_status', user: user %>
    
    <h2>Chat with your match!</h2>
    
    <div id="chatroom-container">
      <%= render 'deals/chatroom', user: user %>
      
      <%= form_for Message.new, remote: true, data: {'on-change-message': true} do |f| %>
        <div class="form-group">
          <div class="input-group">
            <%= f.text_field :content, class: 'form-control', autocomplete: "off" %>
            <span class="input-group-addon">
              <%= f.submit 'Post', class: 'fa' %>
            </span>
          </div>
        </div>
      <% end %> 
    </div>
      
  </div>  
</div>
