<div id="match_user">
  <% if user.current_deal %>

    <% if user.is_seller %>
      <% matched_user = user.current_deal.buyer %>
    <% else %>
      <% matched_user = user.current_deal.seller %>
    <% end %>

    <%# Name %>
    <h4>You are currently matched with:</h4>
    <h2> <%= matched_user.name %></h2>
    
    <div class="<%= matched_user.meal_plan_name.downcase %> in-deal">
      <%# Photo %>
      <p><img src="<%=matched_user.photo_url%>"/></p>
      
      <%# Details %>
      <p>Meal plan type: <strong><%= matched_user.meal_plan_name %></strong></p>
      
      <% if matched_user.favoriter_ids.include?(user.id.to_s) %>
        <%= link_to "Click to Unfavorite", delete_favorite_path(matched_user.id), method: :delete, class: 'btn btn-danger', remote: true %>
      <% else %>
        <%= link_to "Click to Favorite", create_favorite_path(matched_user.id), method: :post, class: "btn btn-success", remote: true %>
      <% end %>
      
      <%= render 'users/ratings', user: matched_user %>
      <br/>
    </div>

  <% end %>
</div>
