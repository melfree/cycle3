<% unless users.pluck(:latitude).compact.empty? %>
  <% width ||= 700 %>
  <% height ||= 400 %>
  <% zoom ||= 16 %>
  <%= image_tag (static_map_for users, width: width, height: height, zoom: zoom), alt: "CMU", class: "img-responsive img-thumbnail" %>
<% else %>
  <p>
    <i>No locations are available to map.</i>
  </p>
<% end %>
