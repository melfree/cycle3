<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  
  <%= render 'email_fields', f: f %>

  <%= render 'password_fields', f: f, required: true %>

  <div class="actions">
    <%= f.button "Sign up", class: "btn btn-lg btn-info", data: {disable_with: load_icon("Signing up")} %>
  </div>
 
<% end %>

<%= render "users/shared/links" %>
