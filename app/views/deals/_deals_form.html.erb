<%= form_for Deal.new, url: deals_path, remote: true do |f| %>
  <div class="row">
    <% for sym, collection in [[:status, Deal.select_options_for_status],
                               [:location, User::LOCATIONS.map.with_index.to_a]] %>
      <div class="col-xs-6">
        <div class="form-group required">
          <%= f.label sym, "Type", class: 'control-label'  %><br />
          <%= f.select sym, collection, required: true, class: "form-control" %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <% for sym in [:dinex, :blocks, :guest_blocks] %>
      <div class="col-xs-2">
        <div class="form-group">
          <%= f.label sym, "#{sym.to_s.humanize}", class: 'control-label'  %><br />
          <%= f.number_field sym, min: 0, class: "form-control" %>
        </div>
      </div>
    <% end %>
    
    <div class="col-xs-6"> 
      <div class="form-group">
        <%= f.label :description, "Notes", class: 'control-label'  %><br />
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    
  </div>
  <div class="actions">  
    <%= f.button "Create New Deal", class: 'btn', data: {disable_with: load_icon("Saving") } %>
  </div>
<% end %>
