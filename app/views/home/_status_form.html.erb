<%= form_for current_user, url: edit_current_user_path, html: { method: :put }, remote: true, data: {'on-change-submit' => 'true'} do |f| %>
   <p class="help-block"><i>If you're a seller, your Meal Plan information will be used to match you to potential buyers.</i></p>
   <div class="row">
    <% for sym in [:dinex, :blocks, :guest_blocks] %>
      <div class="col-xs-3">
        <div class="form-group">
          <%= f.label sym, "My #{sym.to_s.humanize.downcase}", class: 'control-label'  %><br />
          <%= f.number_field sym, min: 0, class: "form-control" %>
        </div>
      </div>
    <% end %>
   </div>
   
   <p class="help-block"><i>You can leave any notes for potential buyers/sellers in the Notes section.</i></p>
   <div class="row">
      <div class="col-xs-6"> 
        <div class="form-group">
          <%= f.label :description, "Notes", class: 'control-label'  %><br />
          <%= f.text_area :description, class: "form-control" %>
        </div>
      </div>
   </div>
  
  <p id="geo_help_block_init">
    <strong><i class="fa fa-spin fa-spinner"></i> Detecting your current location...</strong>
  </p>
  
  <p class="hidden" id="geo_help_block_succeeded">
    <strong><i class="fa fa-check"></i> Your current location was successfully saved.</strong>
  </p>
  
  <p class="hidden" id="geo_help_block_failed">
    <strong><i class="fa fa-times"></i> We're sorry, geolocation is not supported by this browser.</strong>
  </p>

  
  <%= f.hidden_field :latitude, class: "form-control" %>
  <%= f.hidden_field :longitude, class: "form-control" %>
<% end %>
